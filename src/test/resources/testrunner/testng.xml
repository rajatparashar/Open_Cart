<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="OpenCart suite" thread-count="5" parallel="tests"
	verbose="4">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
	</listeners>

	<test name="Login Page Test_chrome_123">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="123.0" />
		<parameter name="testname" value="Login Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Home Page Test_chrome_124">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="124.0" />
		<parameter name="testname" value="Home Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test>

	<test name="Product Info Page_chrome_126">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="126.0" />
		<parameter name="testname" value="Product Info Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>

	<test name="Login Page Test_firefox_100">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="100.0" />
		<parameter name="testname" value="Login Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Home Page Test_firefox_124">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="124.0" />
		<parameter name="testname" value="Home Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test>

	<test name="Product Info Page_firefox_125">
		<parameter name="browser" value="firefox" />
		<parameter name="browserversion" value="125.0" />
		<parameter name="testname" value="Product Info Page Test" />
		<classes>
			<class name="com.qa.opencart.tests.ProductInfoPageTest" />
		</classes>
	</test>
</suite>